<h1>Products in <%= @category.name %> Category</h1>
<%= form_with(url: search_products_path, method: :get) do |form| %>
  <%= form.text_field :keyword, placeholder: 'Enter keyword' %>
  <%= form.submit 'Search' %>
<% end %>
<ul>
  <% @products.each do |product| %>
    <li>
      <strong><%= link_to product.name, show_product_product_path(product) %></strong>
    </li>
  <% end %>
</ul>
