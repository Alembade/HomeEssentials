<h1>Update Quantity</h1>

<%= form_tag(update_quantity_path(@product.id), method: :patch) do %>
  <p>
    <%= label_tag 'Quantity:' %>
    <%= number_field_tag 'quantity', @cart[@product.id], min: 1 %>
  </p>

  <%= submit_tag 'Update Quantity' %>
<% end %>

<%= link_to 'Back to Cart', cart_path %>
