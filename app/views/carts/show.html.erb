<h1>Your Cart</h1>

<% if @cart.empty? %>
  <p>Your cart is empty.</p>
<% else %>
  <ul>
    <% @cart.each do |product_id, quantity| %>
      <% product = Product.find(product_id) %>
      <li>
        <%= link_to product.name, product_path(product) %>
        - Quantity: <%= quantity %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= link_to 'Back to Product Listing', products_path %>
