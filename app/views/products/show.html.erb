<div class="product-details-container">
  <h1 class="product-name"><%= @product.name %></h1>
  <p class="product-description">Description: <%= @product.description %></p>
  <p class="product-price">Price: <%= number_to_currency(@product.price) %></p>

  <% if @product.image.attached? %>
    <%= image_tag @product.image, class: 'product-image' %>
  <% end %>

  <%= button_to 'Add to Cart ðŸ›’', add_to_cart_path(@product), method: :post, class: 'add-to-cart-button' %>

  <% if current_user && current_user.admin? %>
    <div class="admin-actions">
      <%= link_to 'Edit', admin_edit_product_path(@product), class: 'admin-edit-link' %>
    </div>
    <div>
      <%= button_to 'Delete', admin_delete_product_path(@product), method: :delete, data: { confirm: 'Are you sure?' }, class: 'admin-delete-button' %>
    </div>
  <% end %>

  <%= link_to 'Back to Product Listing', products_path, class: 'back-to-listing-link' %>
</div>