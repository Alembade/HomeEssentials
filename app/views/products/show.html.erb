<div class="product-details-container">
  <h1 class="product-name"><%= @product.name %></h1>
  <p class="product-description">Description: <%= @product.description %></p>
  <p class="product-price">Price: <%= number_to_currency(@product.price) %></p>

  <% if @product.image.attached? %>
    <%= image_tag url_for(@product.image.variant(resize_to_limit: [200, 200])), class: 'product-image', alt: 'Product Image' %>
  <% end %>

  <%= form_tag add_to_cart_path(@product), method: :post do %>
  <%= submit_tag 'Add to Cart ðŸ›’', class: 'add-to-cart-button' %>
  <% end %>
  <% if current_user && current_user.admin? %>
    <div class="admin-actions">
      <%= link_to 'Edit', admin_edit_product_path(@product), class: 'admin-edit-link' %>
    </div>
    <div>
      <%= form_tag admin_delete_product_path(@product), method: :delete do %>
        <%= submit_tag 'Delete', class: 'admin-delete-button' %>
      <% end %>
    </div>
  <% end %>

  <%= link_to 'Back to Product Listing', products_path, class: 'back-to-listing-link' %>
</div>
