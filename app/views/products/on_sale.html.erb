<% @products.each do |product| %>
  <div class="product-container">
    <h1 class="product-heading"><%= "#{product.name} (On Sale)" %></h1>

    <div>
      <% if product.image.attached? %>
        <%= image_tag product.image, class: 'product-image' %>
      <% end %>

      <p><strong>Description:</strong> <%= product.description %></p>
      <p><strong>Price:</strong> <%= number_to_currency(product.price) %></p>
    </div>
     <%= button_to 'Add to Cart ðŸ›’', add_to_cart_path(product), method: :post, class: 'add-to-cart-button' %>
  </div>
<% end %>
