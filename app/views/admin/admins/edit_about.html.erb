<h1>Edit About Information</h1>

<%= form_tag admin_update_about_path, method: :patch do %>
  <div>
    <%= label_tag :about_text, 'About Text' %>
    <%= text_area_tag :about_text, Rails.application.config.about_text %>
  </div>

  <div>
    <%= label_tag :contact_phone, 'Contact Phone' %>
    <%= text_field_tag :contact_phone, Rails.application.config.contact_phone %>
  </div>

  <div>
    <%= label_tag :contact_email, 'Contact Email' %>
    <%= text_field_tag :contact_email, Rails.application.config.contact_email %>
  </div>

  <div>
    <%= submit_tag 'Update About Information' %>
  </div>
<% end %>
