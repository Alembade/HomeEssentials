<h1>Product Listing</h1>

<% if current_user && current_user.admin? %>
  <%= link_to 'Add New Product', admin_new_product_path %>
<% end %>

<ul>
  <% @products.each do |product| %>
    <li>
      <strong><%= product.name %></strong>
      <p><%= product.description %></p>
      <p>Price: <%= number_to_currency(product.price) %></p>

      <% if current_user && current_user.admin? %>
        <%= link_to 'Edit', admin_edit_product_path(product) %> |
        <%= button_to 'Delete', admin_delete_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </li>
  <% end %>
</ul>
