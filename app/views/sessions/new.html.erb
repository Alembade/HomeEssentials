<h1>Login</h1>

<%= form_with(url: login_path, method: :post) do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.submit 'Login' %>
  </div>
<% end %>

<p>You have no account yet? <%= link_to 'Register here', signup_path %></p>
